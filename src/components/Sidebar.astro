---
interface Props {
  pathname: string;
}

const { pathname } = Astro.props;

const navItems = {
  '/': {
    name: 'home',
  },
  '/blog': {
    name: 'writings',
  },
};

const normalizedPath = pathname.includes('/blog/') ? '/blog' : pathname;
---

<aside class="-ml-[8px] mb-16 tracking-tight">
  <div class="lg:sticky lg:top-20">
    <nav
      class="flex flex-row items-start relative px-0 pb-0 fade md:overflow-auto scroll-pr-6 md:relative"
      id="nav"
    >
      <div class="flex flex-row space-x-0 pr-10">
        {Object.entries(navItems).map(([path, { name }]) => {
          const isActive = path === normalizedPath;

          return (
            <a
              href={path}
              class:list={[
                'flex align-middle text-neutral-900 transition-all hover:text-neutral-700 dark:text-neutral-100 dark:hover:text-neutral-300',
                { 'text-neutral-500': !isActive },
              ]}
            >
              <span class="relative py-1 px-2">
                {name}
                {isActive && (
                  <span
                    class="absolute h-[1px] top-7 mx-2 inset-0 bg-neutral-200 dark:bg-neutral-800 z-[-1] dark:bg-gradient-to-r from-transparent to-neutral-900"
                  />
                )}
              </span>
            </a>
          );
        })}
      </div>
    </nav>
  </div>
</aside>
